include ../../../node_modules/bemto.pug/bemto.pug
include ./header.pug
include ./layout.pug

mixin piker(className, name, value)
    .p-3
        +b.color-piker(class=className)
            +e.box
            +e.verbose
                +e.label=name
                +e.value=value

mixin section(title, col = 4)
    div(class = ('col-12 col-lg-' + col))
        .p-3
            .h3=title
            block
